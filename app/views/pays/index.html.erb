


<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('simple_form.labels.pay.user') %></th>
      <th><%= t('simple_form.labels.pay.bank') %></th>
      <th><%= t('simple_form.labels.pay.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pays.each do |pay| %>
      <tr>
        <td><%= pay.user %></td>
        <td><%= pay.bank %></td>
        <td><%= pay.name %></td>
        <td><%= link_to t('actions.show'), pay, class:'btn btn-default'  %></td>
        <td><%= link_to edit_pay_path(pay), 
          class:'btn btn-default ' do %>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
           <% end %>
        </td>
        <td><%= link_to  "/pays/#{pay.id}.json", method: :delete, remote: true, data: { confirm: '¿Está seguro?' },
          class:'btn btn-danger delete-row ' do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th><%= t('simple_form.labels.pay.user') %></th>
      <th><%= t('simple_form.labels.pay.bank') %></th>
      <th><%= t('simple_form.labels.pay.name') %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>

</table>
<br>

  <%= link_to t('actions.new'), new_pay_path, class:'btn btn-primary btn-rounded'  %> 

