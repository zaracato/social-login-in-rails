
<%= content_for :title_link do %> 
  <%= link_to t('activerecord.models.cards') ,cards_path %> 
<% end %> 

<%= content_for :new_link do %> 
  <%= link_to t('actions.new'), new_card_path, class:'btn btn-primary btn-rounded'  %> 
<% end %> 

<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('simple_form.labels.card.card_id') %></th>
      <th><%= t('simple_form.labels.card.card_number') %></th>
      <th><%= t('simple_form.labels.card.holder_name') %></th>
      <th><%= t('simple_form.labels.card.expiration_year') %></th>
      <th><%= t('simple_form.labels.card.expiration_month') %></th>
      <th><%= t('simple_form.labels.card.allows_charges') %></th>
      <th><%= t('simple_form.labels.card.allows_payouts') %></th>
      <th><%= t('simple_form.labels.card.creation_date') %></th>
      <th><%= t('simple_form.labels.card.bank_name') %></th>
      <th><%= t('simple_form.labels.card.bank_code') %></th>
      <th><%= t('simple_form.labels.card.customer_id') %></th>
      <th><%= t('simple_form.labels.card.points') %></th>
      <th><%= t('simple_form.labels.card.addresses') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.card_id %></td>
        <td><%= card.card_number %></td>
        <td><%= card.holder_name %></td>
        <td><%= card.expiration_year %></td>
        <td><%= card.expiration_month %></td>
        <td><%= card.allows_charges %></td>
        <td><%= card.allows_payouts %></td>
        <td><%= card.creation_date %></td>
        <td><%= card.bank_name %></td>
        <td><%= card.bank_code %></td>
        <td><%= card.customer_id %></td>
        <td><%= card.points %></td>
        <td><%= card.addresses %></td>
        <td><%= link_to t('actions.show'), card, class:'btn btn-default'  %></td>
        <td><%= link_to edit_card_path(card), 
          class:'btn btn-default ' do %>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
           <% end %>
        </td>
        <td><%= link_to  "/cards/#{card.id}.json", method: :delete, remote: true, data: { confirm: '¿Está seguro?' },
          class:'btn btn-danger delete-row ' do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th><%= t('simple_form.labels.card.card_id') %></th>
      <th><%= t('simple_form.labels.card.card_number') %></th>
      <th><%= t('simple_form.labels.card.holder_name') %></th>
      <th><%= t('simple_form.labels.card.expiration_year') %></th>
      <th><%= t('simple_form.labels.card.expiration_month') %></th>
      <th><%= t('simple_form.labels.card.allows_charges') %></th>
      <th><%= t('simple_form.labels.card.allows_payouts') %></th>
      <th><%= t('simple_form.labels.card.creation_date') %></th>
      <th><%= t('simple_form.labels.card.bank_name') %></th>
      <th><%= t('simple_form.labels.card.bank_code') %></th>
      <th><%= t('simple_form.labels.card.customer_id') %></th>
      <th><%= t('simple_form.labels.card.points') %></th>
      <th><%= t('simple_form.labels.card.addresses') %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>

</table>
<%= paginate @cards %>
<br>

