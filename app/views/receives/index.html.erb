
<%= content_for :title_link do %> 
  <%= link_to t('activerecord.models.receives') ,receives_path %> 
<% end %> 

<%= content_for :new_link do %> 
  <%= link_to t('actions.new'), new_receife_path, class:'btn btn-primary btn-rounded'  %> 
<% end %> 

<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('simple_form.labels.receife.user') %></th>
      <th><%= t('simple_form.labels.receife.bank') %></th>
      <th><%= t('simple_form.labels.receife.clabe') %></th>
      <th><%= t('simple_form.labels.receife.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receives.each do |receife| %>
      <tr>
        <td><%= receife.user %></td>
        <td><%= receife.bank %></td>
        <td><%= receife.clabe %></td>
        <td><%= receife.name %></td>
        <td><%= link_to t('actions.show'), receife, class:'btn btn-default'  %></td>
        <td><%= link_to edit_receife_path(receife), 
          class:'btn btn-default ' do %>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
           <% end %>
        </td>
        <td><%= link_to  "/receives/#{receife.id}.json", method: :delete, remote: true, data: { confirm: '¿Está seguro?' },
          class:'btn btn-danger delete-row ' do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th><%= t('simple_form.labels.receife.user') %></th>
      <th><%= t('simple_form.labels.receife.bank') %></th>
      <th><%= t('simple_form.labels.receife.clabe') %></th>
      <th><%= t('simple_form.labels.receife.name') %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>

</table>
<%= paginate @receives %>
<br>

