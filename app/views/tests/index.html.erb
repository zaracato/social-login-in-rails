

  <%= link_to t('activerecord.models.tests') ,tests_path %> 


  <%= link_to t('actions.new'), new_test_path, class:'btn btn-primary btn-rounded'  %> 


<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('simple_form.labels.test.name') %></th>
      <th><%= t('simple_form.labels.test.description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= test.description %></td>
        <td><%= link_to t('actions.show'), test, class:'btn btn-default'  %></td>
        <td><%= link_to edit_test_path(test), 
          class:'btn btn-default ' do %>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
           <% end %>
        </td>
        <td><%= link_to  "/tests/#{test.id}.json", method: :delete, remote: true, data: { confirm: '¿Está seguro?' },
          class:'btn btn-danger delete-row ' do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th><%= t('simple_form.labels.test.name') %></th>
      <th><%= t('simple_form.labels.test.description') %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>

</table>

<br>

