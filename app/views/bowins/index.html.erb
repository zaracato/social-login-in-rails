


<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('simple_form.labels.bowin.user') %></th>
      <th><%= t('simple_form.labels.bowin.bank') %></th>
      <th><%= t('simple_form.labels.bowin.clabe') %></th>
      <th><%= t('simple_form.labels.bowin.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bowins.each do |bowin| %>
      <tr>
        <td><%= bowin.user %></td>
        <td><%= bowin.bank %></td>
        <td><%= bowin.clabe %></td>
        <td><%= bowin.name %></td>
        <td><%= link_to t('actions.show'), bowin, class:'btn btn-default'  %></td>
        <td><%= link_to edit_bowin_path(bowin), 
          class:'btn btn-default ' do %>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
           <% end %>
        </td>
        <td><%= link_to  "/bowins/#{bowin.id}.json", method: :delete, remote: true, data: { confirm: '¿Está seguro?' },
          class:'btn btn-danger delete-row ' do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th><%= t('simple_form.labels.bowin.user') %></th>
      <th><%= t('simple_form.labels.bowin.bank') %></th>
      <th><%= t('simple_form.labels.bowin.clabe') %></th>
      <th><%= t('simple_form.labels.bowin.name') %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>

</table>
  <%= link_to t('actions.new'), new_bowin_path, class:'btn btn-primary btn-rounded'  %> 


