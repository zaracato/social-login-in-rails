

<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= t('simple_form.labels.bank.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= link_to t('actions.show'), bank, class:'btn btn-default'  %></td>
        <td><%= link_to edit_bank_path(bank), 
          class:'btn btn-default ' do %>
           <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
           <% end %>
        </td>
        <td><%= link_to  "/banks/#{bank.id}.json", method: :delete, remote: true, data: { confirm: '¿Está seguro?' },
          class:'btn btn-danger delete-row ' do %>
           <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th><%= t('simple_form.labels.bank.name') %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>

</table>

<br>


  <%= link_to t('actions.new'), new_bank_path, class:'btn btn-primary btn-rounded'  %>

